@page "/impianti"
@inject HttpClient Http
@inject IJSRuntime JS
@inject NavigationManager Nav

@using BlazorApp1.Models;

<h3 class="mt-3 mb-4">Gestione Impianti</h3>

@if (!Loaded)
{
    <p>Caricamento…</p>
    return;
}

@if (Error != null)
{
    <div class="alert alert-danger">@Error</div>
    return;
}

@if (LoggedRole == "admin")
{
    <h2 class="mb-4 fw-bold text-primary">
        <i class="bi bi-collection"></i> Impianti di Tutti i Clienti
    </h2>

    @foreach (var cliente in Root!.Keys.OrderBy(k => k))
    {
        var impiantiCliente = Root[cliente].impianti
                                          .OrderBy(i => i.nome)
                                          .ToList();

        <div class="mb-5 pb-3 border-bottom">

            <!-- Header Cliente -->
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h3 class="fw-bold text-dark m-0">
                    <i class="bi bi-person-circle"></i> @cliente
                </h3>

                <button class="btn btn-success btn-sm shadow-sm"
                        @onclick="() => AddImpianto(cliente)">
                    <i class="bi bi-plus-circle"></i> Nuovo Impianto
                </button>
            </div>

            @if (impiantiCliente.Count == 0)
            {
                <p class="text-muted fst-italic">Nessun impianto registrato per questo cliente.</p>
            }
            else
            {
                <!-- Griglia premium -->
                <div class="row g-4">

                    @foreach (var imp in impiantiCliente)
                    {
                        <div class="col-md-4 col-lg-3 col-xl-3">

                            <div class="card h-100 border-0 shadow-sm"
                                 style="
                            background-color:@(imp.colore ?? "#e3f2fd") !important;
                            transition: transform .2s ease;
                            border-radius: 16px;
                         "
                                 onmouseover="this.style.transform='scale(1.03)'"
                                 onmouseout="this.style.transform='scale(1)'">

                                <div class="card-body">
                                    <h5 class="fw-bold">@imp.nome</h5>

                                    @if (!string.IsNullOrWhiteSpace(imp.indirizzo))
                                    {
                                        <div class="text-muted mb-2">
                                            <i class="bi bi-geo-alt"></i> @imp.indirizzo
                                        </div>
                                    }

                                    <span class="badge bg-dark">@imp.monitors.Count device</span>
                                </div>

                                <div class="card-footer bg-transparent d-flex justify-content-between">
                                    <button class="btn btn-sm btn-primary"
                                            @onclick="() => ApriDettaglio(cliente, imp)">
                                        <i class="bi bi-search"></i> Dettaglio
                                    </button>

                                    <span>
                                        <button class="btn btn-sm btn-outline-primary me-2"
                                                @onclick="() => RenameImpianto(cliente, imp)">
                                            <i class="bi bi-pencil"></i>
                                        </button>

                                        <button class="btn btn-sm btn-outline-danger"
                                                @onclick="() => DeleteImpianto(cliente, imp)">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </span>
                                </div>

                            </div>

                        </div>
                    }

                </div>
            }

        </div>
    }
}

@code {
    private string ProxyBase = "https://first.marcomaria-zora.workers.dev/api/dav/UPLOADS/";
    private const string FileName = "impianti.json";

    private string? LoggedUser;
    private string? LoggedRole;

    private ImpiantiRoot? Root;
    private UserImpianti? UserData;

    private bool Loaded = false;
    private string? Error;

    protected override async Task OnInitializedAsync()
    {
        LoggedUser = await JS.InvokeAsync<string>("sessionStorage.getItem", "loggedUser");
        LoggedRole = await JS.InvokeAsync<string>("sessionStorage.getItem", "loggedRole");

        if (string.IsNullOrWhiteSpace(LoggedUser))
        {
            Nav.NavigateTo("login");
            return;
        }

        await LoadImpianti();
        Loaded = true;
    }

    private async Task LoadImpianti()
    {
        Root = await Http.GetFromJsonAsync<ImpiantiRoot>(ProxyBase + FileName);
        Root ??= new ImpiantiRoot();

        if (LoggedRole != "admin")
        {
            if (!Root.ContainsKey(LoggedUser!))
                Root[LoggedUser!] = new UserImpianti();

            UserData = Root[LoggedUser!];
        }
    }

    private async Task Save()
    {
        var json = System.Text.Json.JsonSerializer.Serialize(Root,
            new System.Text.Json.JsonSerializerOptions { WriteIndented = true });

        using var content = new StringContent(json, System.Text.Encoding.UTF8, "application/json");
        await Http.PutAsync(ProxyBase + FileName, content);
    }

    private async Task AddImpianto(string user)
    {
        var name = await JS.InvokeAsync<string?>("prompt", "Nome nuovo impianto:");
        if (string.IsNullOrWhiteSpace(name)) return;

        Root![user].impianti.Add(new Impianto
        {
            id = Guid.NewGuid().ToString("N"),
            nome = name.Trim()
        });

        await Save();
    }

    private async Task RenameImpianto(string user, Impianto imp)
    {
        var newName = await JS.InvokeAsync<string?>("prompt", "Nuovo nome:", imp.nome);
        if (string.IsNullOrWhiteSpace(newName)) return;

        imp.nome = newName.Trim();
        await Save();
    }

    private async Task DeleteImpianto(string user, Impianto imp)
    {
        var ok = await JS.InvokeAsync<bool>("confirm", $"Eliminare '{imp.nome}'?");
        if (!ok) return;

        Root![user].impianti.Remove(imp);
        await Save();
    }

    private void ApriDettaglio(string user, Impianto imp)
    {
        Nav.NavigateTo($"impianto/{user}/{imp.id}");
    }
}