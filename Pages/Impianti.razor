@page "/impianti"
@inject HttpClient Http
@inject IJSRuntime JS
@inject NavigationManager Nav

@using BlazorApp1.Models;

<h3>Impianti</h3>

@if (!Loaded)
{
    <p>Caricamento…</p>
    return;
}

@if (Error != null)
{
    <p class="text-danger">@Error</p>
    return;
}

@if (LoggedRole == "admin")
{
    <h5>Tutti gli impianti</h5>

    @foreach (var kvp in Root!)
    {
        <h6 class="mt-4">@kvp.Key</h6>

        <button class="btn btn-sm btn-success mb-2"
                @onclick="() => AddImpianto(kvp.Key)">
            Nuovo Impianto
        </button>

        @foreach (var imp in kvp.Value.impianti)
        {
            <div class="card mb-3">
                <div class="card-header d-flex justify-content-between">
                    <strong>@imp.nome</strong>

                    <span>
                        <button class="btn btn-sm btn-outline-primary me-2"
                                @onclick="() => RenameImpianto(kvp.Key, imp)">
                            Rinomina
                        </button>

                        <button class="btn btn-sm btn-outline-danger"
                                @onclick="() => DeleteImpianto(kvp.Key, imp)">
                            Elimina
                        </button>
                    </span>
                </div>

                <div class="card-body">
                    <h6>Devices</h6>

                    <button class="btn btn-sm btn-secondary mb-2"
                            @onclick="() => AddDevice(imp)">
                        Aggiungi Device
                    </button>

                    <ul class="list-group">
                        @foreach (var dev in imp.monitors)
                        {
                            <li class="list-group-item d-flex justify-content-between">
                                @dev.nome
                                <span>
                                    <button class="btn btn-sm btn-outline-primary me-2"
                                            @onclick="() => RenameDevice(dev)">
                                        Rinomina
                                    </button>
                                    <button class="btn btn-sm btn-outline-danger"
                                            @onclick="() => DeleteDevice(imp, dev)">
                                        Elimina
                                    </button>
                                </span>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        }
    }
}
else
{
    <h5>I tuoi impianti</h5>

    <button class="btn btn-sm btn-success mb-2"
            @onclick="() => AddImpianto(LoggedUser!)">
        Nuovo Impianto
    </button>

    @foreach (var imp in UserData!.impianti)
    {
        <div class="card mb-3">
            <div class="card-header d-flex justify-content-between">
                <strong>@imp.nome</strong>

                <span>
                    <button class="btn btn-sm btn-outline-primary me-2"
                            @onclick="() => RenameImpianto(LoggedUser!, imp)">
                        Rinomina
                    </button>
                    <button class="btn btn-sm btn-outline-danger"
                            @onclick="() => DeleteImpianto(LoggedUser!, imp)">
                        Elimina
                    </button>
                </span>
            </div>

            <div class="card-body">
                <h6>Devices</h6>

                <button class="btn btn-sm btn-secondary mb-2"
                        @onclick="() => AddDevice(imp)">
                    Aggiungi Device
                </button>

                <ul class="list-group">
                    @foreach (var dev in imp.monitors)
                    {
                        <li class="list-group-item d-flex justify-content-between">
                            @dev.nome
                            <span>
                                <button class="btn btn-sm btn-outline-primary me-2"
                                        @onclick="() => RenameDevice(dev)">
                                    Rinomina
                                </button>
                                <button class="btn btn-sm btn-outline-danger"
                                        @onclick="() => DeleteDevice(imp, dev)">
                                    Elimina
                                </button>
                            </span>
                        </li>
                    }
                </ul>
            </div>
        </div>
    }
}

@code {

    private string ProxyBase = "https://first.marcomaria-zora.workers.dev/api/dav/UPLOADS/";
    private const string FileName = "impianti.json";

    private string? LoggedUser;
    private string? LoggedRole;

    private ImpiantiRoot? Root;
    private UserImpianti? UserData;

    private bool Loaded = false;
    private string? Error;

    protected override async Task OnInitializedAsync()
    {
        LoggedUser = await JS.InvokeAsync<string>("sessionStorage.getItem", "loggedUser");
        LoggedRole = await JS.InvokeAsync<string>("sessionStorage.getItem", "loggedRole");

        if (string.IsNullOrWhiteSpace(LoggedUser))
        {
            Nav.NavigateTo("login");
            return;
        }

        await LoadImpianti();
        Loaded = true;
    }

    private async Task LoadImpianti()
    {
        try
        {
            Root = await Http.GetFromJsonAsync<ImpiantiRoot>(ProxyBase + FileName);
            Root ??= new ImpiantiRoot();

            if (LoggedRole != "admin")
            {
                if (!Root.ContainsKey(LoggedUser!))
                    Root[LoggedUser!] = new UserImpianti();

                UserData = Root[LoggedUser!];
            }
        }
        catch (Exception ex)
        {
            Error = ex.Message;
        }
    }

    // ===== SALVATAGGIO =====
    private async Task Save()
    {
        var json = System.Text.Json.JsonSerializer.Serialize(
            Root,
            new System.Text.Json.JsonSerializerOptions { WriteIndented = true }
        );

        using var content = new StringContent(json, System.Text.Encoding.UTF8, "application/json");
        await Http.PutAsync(ProxyBase + FileName, content);
    }

    // ===== IMPAINTI =====
    private async Task AddImpianto(string user)
    {
        var name = await JS.InvokeAsync<string?>("prompt", "Nome nuovo impianto:");
        if (string.IsNullOrWhiteSpace(name)) return;

        if (!Root!.ContainsKey(user))
            Root[user] = new UserImpianti();

        Root[user].impianti.Add(new Impianto
        {
            id = Guid.NewGuid().ToString("N"),
            nome = name.Trim()
        });

        await Save();
    }

    private async Task RenameImpianto(string user, Impianto imp)
    {
        var newName = await JS.InvokeAsync<string?>("prompt", "Nuovo nome:", imp.nome);
        if (string.IsNullOrWhiteSpace(newName)) return;

        imp.nome = newName.Trim();
        await Save();
    }

    private async Task DeleteImpianto(string user, Impianto imp)
    {
        var ok = await JS.InvokeAsync<bool>("confirm", $"Eliminare '{imp.nome}'?");
        if (!ok) return;

        Root![user].impianti.Remove(imp);
        await Save();
    }

    // ===== DEVICE =====
    private async Task AddDevice(Impianto imp)
    {
        var name = await JS.InvokeAsync<string?>("prompt", "Nome device:");
        if (string.IsNullOrWhiteSpace(name)) return;

        imp.monitors.Add(new MonitorItem
        {
            id = Guid.NewGuid().ToString("N"),
            nome = name.Trim(),
            tipo = ""
        });

        await Save();
    }

    private async Task RenameDevice(MonitorItem dev)
    {
        var newName = await JS.InvokeAsync<string?>("prompt", "Nuovo nome device:", dev.nome);
        if (string.IsNullOrWhiteSpace(newName)) return;

        dev.nome = newName.Trim();
        await Save();
    }

    private async Task DeleteDevice(Impianto imp, MonitorItem dev)
    {
        var ok = await JS.InvokeAsync<bool>("confirm", $"Eliminare device '{dev.nome}'?");
        if (!ok) return;

        imp.monitors.Remove(dev);
        await Save();
    }
}