@page "/impianto/{User}/{Id}"
@inject HttpClient Http
@inject NavigationManager Nav
@inject IJSRuntime JS

@using BlazorApp1.Models;

<h3 class="mt-3">Dettaglio Impianto</h3>

@if (!Loaded)
{
    <p>Caricamento…</p>
    return;
}

@if (Error != null)
{
    <div class="alert alert-danger">@Error</div>
    return;
}

<div class="card shadow-sm mb-4">
    <div class="card-body">

        <label class="form-label">Nome Impianto</label>
        <input class="form-control mb-3" @bind="Impianto!.nome" @bind:event="oninput" />

        <label class="form-label">Indirizzo</label>
        <input class="form-control mb-3" @bind="Impianto!.indirizzo" @bind:event="oninput" />

        <button class="btn btn-primary" @onclick="Save">
            Salva Modifiche
        </button>

        <button class="btn btn-secondary ms-2" @onclick="GoBack">
            Torna agli impianti
        </button>
    </div>
</div>

<h4>Devices</h4>

<button class="btn btn-success btn-sm mb-3" @onclick="AddDevice">
    + Aggiungi Device
</button>

@if (Impianto!.monitors.Count == 0)
{
    <p class="text-muted">Nessun device presente.</p>
}
else
{
    <ul class="list-group">
        @foreach (var dev in Impianto!.monitors)
        {
            <li class="list-group-item d-flex justify-content-between">
                <span>@dev.nome</span>

                <span>
                    <button class="btn btn-sm btn-outline-primary me-2"
                            @onclick="() => RenameDevice(dev)">
                        Rinomina
                    </button>

                    <button class="btn btn-sm btn-outline-danger"
                            @onclick="() => DeleteDevice(dev)">
                        Elimina
                    </button>
                </span>
            </li>
        }
    </ul>
}

@code {

    // === Parametri URL ===
    [Parameter] public string User { get; set; } = "";
    [Parameter] public string Id { get; set; } = "";

    // === Percorsi Nextcloud ===
    private string ProxyBase = "https://first.marcomaria-zora.workers.dev/api/dav/UPLOADS/";
    private const string FileName = "impianti.json";

    // === Modello dati ===
    private ImpiantiRoot? Root;
    private Impianto? Impianto;

    private bool Loaded = false;
    private string? Error;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            Root = await Http.GetFromJsonAsync<ImpiantiRoot>(ProxyBase + FileName);
            Root ??= new ImpiantiRoot();

            if (!Root.ContainsKey(User))
            {
                Error = $"Utente '{User}' non trovato.";
                return;
            }

            Impianto = Root[User].impianti.FirstOrDefault(i => i.id == Id);

            if (Impianto == null)
            {
                Error = "Impianto non trovato.";
                return;
            }

            Loaded = true;
        }
        catch (Exception ex)
        {
            Error = ex.Message;
        }
    }

    private async Task Save()
    {
        var json = System.Text.Json.JsonSerializer.Serialize(
            Root,
            new System.Text.Json.JsonSerializerOptions { WriteIndented = true }
        );

        using var content = new StringContent(json, System.Text.Encoding.UTF8, "application/json");
        await Http.PutAsync(ProxyBase + FileName, content);
    }

    private void GoBack()
    {
        Nav.NavigateTo("impianti");
    }

    private async Task AddDevice()
    {
        var name = await JS.InvokeAsync<string?>("prompt", "Nome nuovo device:");
        if (string.IsNullOrWhiteSpace(name)) return;

        Impianto!.monitors.Add(new MonitorItem
        {
            id = Guid.NewGuid().ToString("N"),
            nome = name.Trim(),
            tipo = ""
        });

        await Save();
    }

    private async Task RenameDevice(MonitorItem dev)
    {
        var newName = await JS.InvokeAsync<string?>("prompt", "Nuovo nome device:", dev.nome);
        if (string.IsNullOrWhiteSpace(newName)) return;

        dev.nome = newName.Trim();
        await Save();
    }

    private async Task DeleteDevice(MonitorItem dev)
    {
        var ok = await JS.InvokeAsync<bool>("confirm", $"Eliminare device '{dev.nome}'?");
        if (!ok) return;

        Impianto!.monitors.Remove(dev);
        await Save();
    }
}